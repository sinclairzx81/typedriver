{
  "tasks": {
    "build": "deno run -A tasks.ts build",           // Build Project
    "clean": "deno run -A tasks.ts clean",           // Clean Build Targets
    "format": "deno run -A tasks.ts format",         // Formats Code
    "local": "deno run -A tasks.ts local",           // Build Local Project
    "publish": "deno run -A tasks.ts publish",       // Publish Package
    "report": "deno run -A tasks.ts report",         // Test Converage
    "range": "deno run -A tasks.ts range",           // TypeScript Compiler Ranges
    "start": "deno run -A tasks.ts start",           // Run Example
    "test": "deno run -A tasks.ts test"              // Test Project
  },
  "imports": {
    // --------------------------------------------------------------
    // Build
    // --------------------------------------------------------------
    "tasksmith": "https://raw.githubusercontent.com/sinclairzx81/tasksmith/0.9.6/src/index.ts",
    // --------------------------------------------------------------
    // Test
    // --------------------------------------------------------------
    "test": "./test/common/index.ts",    
    // --------------------------------------------------------------
    // Dependencies
    // --------------------------------------------------------------
    // "@standard-schema/spec": "npm:@standard-schema/spec",
    "@standard-schema/spec": "./src/_standard/standard-schema.ts",
    "typebox": "npm:typebox",
    // --------------------------------------------------------------
    // DevDependencies
    // --------------------------------------------------------------
    "@arrirpc/schema": "npm:@arrirpc/schema",
    "arktype": "npm:arktype",
    "effect": "npm:effect",
    "sury": "npm:sury",
    "valibot": "npm:valibot",
    "yup": "npm:yup",
    "zod": "npm:zod",
    // --------------------------------------------------------------
    // Library
    // --------------------------------------------------------------
    "typedriver": "./src/index.ts"
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true,
    "trailingCommas": "never",
    "lineWidth": 240
  },
  "exclude": [
    "tasks"
  ],
  "compilerOptions": {
    "strict": true
  }
}